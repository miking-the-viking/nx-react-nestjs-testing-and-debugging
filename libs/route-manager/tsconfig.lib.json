{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "../../dist/out-tsc",
        "types": ["node"],
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true
    },
    "exclude": ["**/*.spec.ts", "**/*.spec.tsx"],
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
